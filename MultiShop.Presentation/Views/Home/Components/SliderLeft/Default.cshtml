
@model List<SliderDto>


<div id="header-carousel" class="carousel slide carousel-fade mb-30 mb-lg-0" data-ride="carousel">
    <ol class="carousel-indicators">

        @foreach (SliderDto sliderDto in Model)
        {
            @if (sliderDto.Order.HasValue && sliderDto.Order == 1)
            {
                <li data-target="#header-carousel" data-slide-to="@(sliderDto.Order-1)" class="active"></li>
            }
            else
            {
                <li data-target="#header-carousel" data-slide-to="@(sliderDto.Order - 1)"></li>
            }

        }

    </ol>
    <div class="carousel-inner">
    

        @foreach (SliderDto sliderDto in Model)
        {
            @if (sliderDto.Order.HasValue && sliderDto.Order == 1)
            {
                <div class="carousel-item position-relative active" style="height: 430px;">
                    <img class="position-absolute w-100 h-100" src="@sliderDto.Image" style="object-fit: cover;">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 700px;">
                            <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@sliderDto.Header</h1>
                            <p class="mx-md-5 px-5 animate__animated animate__bounceIn">
                                @sliderDto.Content
                            </p>
                            <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Shop Now</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="carousel-item position-relative" style="height: 430px;">
                    <img class="position-absolute w-100 h-100" src="@sliderDto.Image" style="object-fit: cover;">
                    <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                        <div class="p-3" style="max-width: 700px;">
                            <h1 class="display-4 text-white mb-3 animate__animated animate__fadeInDown">@sliderDto.Header</h1>
                            <p class="mx-md-5 px-5 animate__animated animate__bounceIn">
                                @sliderDto.Content
                            </p>
                            <a class="btn btn-outline-light py-2 px-4 mt-3 animate__animated animate__fadeInUp" href="#">Shop Now</a>
                        </div>
                    </div>
                </div>
            }

            
        }
    </div>


</div>